<p id="notice"><%= notice %></p>


<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Profile:</strong>
  <%= @user.user_profile %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @user.image.large.url %>
</p>

<% if current_user && current_user.user_profile == 'admin' %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
<% else %>
  <%= link_to 'Edit', edit_user_path(@user) %>
<% end %>