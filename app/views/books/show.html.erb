<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @book.image.large.url %>
</p>

<p>
  <strong>Category:</strong>
  <% @book.categories.each do |cat| %>
      <b> - </b><%= cat.name %>
  <% end %>
</p>

<div class="well well-lg">

  <button type="button" class="btn btn-info " data-toggle="collapse" data-target="#comments_collapse<%= @book.id %>">(<b id="comment_count_<%= @book.id %>"><%= @book.comments.count %></b>)
    Book comments <b class="caret"></b></button>

  <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#collapse<%= @book.id %>">(<b id="book_count_<%= @book.id %>"><%= @book.for_sales.count %></b>)
    Books for sale <b class="caret"></b></button>

  <button type="button" class="btn btn-success" >Sell this book</button>

  <div id="collapse<%= @book.id %>" class="panel-collapse collapse ">
    <br>
    <table class ="table">
    <%= render :partial => 'for_sales/for_sale', collection: @book.for_sales %>
    </table>
  </div>

</div><!-- end well -->

  <!-- comments field -->
<div id="comments_collapse<%= @book.id %>" class="panel-collapse collapse ">
<div id='com<%= @book.id %>'>
<%= render :partial => 'comments/comment', collection:  @book.comments %>
</div>

<% if current_user %>
<%= render 'comments/form', comment: Comment.new(book_id: @book.id, :user_id => current_user.id) %>
<% end %>
</div>
<% if current_admin %>
<%= link_to 'Edit', edit_book_path(@book) %> |
<% end %>
<%= link_to 'Back', _back_url %>
