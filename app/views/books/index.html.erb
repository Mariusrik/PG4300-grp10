<p id="notice"><%= notice %></p>
<div class="page-header">
  <h1>Books</h1>
</div>

<% @books.each do |book| %>
    <div class="media">
      <div class="media-left">
        <a href="#">
          <%= image_tag book.image.thumb.url %>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= book.title %></h4>
        <p></p>
        <p> <%= book.description %>
          "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
          incididunt ut labore et dolore
          magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
          consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla
          pariatur.
          Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est
          laborum."</p>

        <span class="label label-primary"><%= book.category.name %></span>
        <span class="label label-primary">Average rating:
          <%= number_with_precision(get_avg(book.id), precision: 1) %>
          </span>
        <table class="pull-right">
          <tr>
            <td><%= link_to 'Les mer', book %></td>
            <% if current_admin %>
                <td><%= link_to 'Endre', edit_book_path(book) %></td>
                <td><%= link_to 'Slett', book, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% end %>
            <% if current_user %>
                <td><%= link_to 'Komentar', new_comment_path(:book => book.id) %></td>
                <td><%= link_to 'Rate', re_rate(book) %></td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>

    <!-- comments field -->
    <div class="panel-group" id="accordion<%=book.id %>">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion<%=book.id %>" href="#collapseSix<%=book.id %>">
              Kommentarer <b class = "caret"></b>
            </a>
          </h4>
        </div>
        <div id="collapseSix<%=book.id %>" class="panel-collapse collapse ">
          <div class="panel-body">
            <% book.comments.each do |comment| %>
                <% if comment.book_id == book.id %>
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title"> <%= comment.user.name %> </h3>
                      </div>
                      <div class="panel-body">
                        <p><%= comment.content %> </p>
                        <p>
                          <small> <%= comment.created_at %> </small>
                        </p>
                        <% if current_admin %>
                            <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
                            <td><%= link_to 'Destroy', comment, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                        <% elsif current_user && current_user.id == comment.user_id %>
                            <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
                            <td><%= link_to 'Destroy', comment, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                        <% end %>
                        <table>

                        </table>
                      </div>
                      <!-- end panel body -->
                    </div>
                    <!-- end panel default -->
                <% end %>
            <% end %>
          </div>

        </div>
      </div>
    </div> <!-- end comments field -->
    <hr>
<% end %>

<br>